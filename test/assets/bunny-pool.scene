# light
transform translate 0.5 1.2 .5
model {
    material light-dim.mat
    v -0.2 0 -0.2
    v -0.2 0 0.2
    v 0.2 0 -0.2
    v 0.2 0 0.2
    f 2 1 3 4
}
transform clear


# bunny
transform scale 2 2 2
transform translate 0.25 -0.06 0.25
material diffuse-gray.mat
model load bunny_1k.obj
transform clear

# floor
transform translate 0 0.01 0
model {
    material wood.mat
    v -0.1 -0.01 -0.1
    v -0.1 -0.01  1.1
    v  1.1 -0.01 -0.1
    v  1.1 -0.01  1.1
    f 1 2 4 3
}
transform clear

background_color 0.9 0.8 0.7

PerspectiveCamera {
  camera_position    < 0.25, 0, 4 >
